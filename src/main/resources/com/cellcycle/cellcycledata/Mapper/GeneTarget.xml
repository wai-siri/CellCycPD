<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cellcycle.cellcycledata.Dao.GeneTargetDao">

  <resultMap type="com.cellcycle.cellcycledata.Entity.GeneTarget" id="GeneTargetMap">
    <result property="gene" column="gene" jdbcType="VARCHAR"/>
    <result property="stage" column="stage" jdbcType="VARCHAR"/>
    <result property="drug" column="drug" jdbcType="VARCHAR"/>
    <result property="cancer" column="cancer" jdbcType="VARCHAR"/>
    <result property="pmid" column="pmid" jdbcType="VARCHAR"/>
  </resultMap>

  <!-- 查询所有基因靶点数据 -->
  <select id="selectAllGeneTargets" resultMap="GeneTargetMap">
    SELECT * FROM gene_target
  </select>

  <!-- 根据基因名查询 -->
  <select id="selectByGene" resultMap="GeneTargetMap">
    SELECT * FROM gene_target WHERE gene = #{gene}
  </select>

  <!-- 根据阶段查询 -->
  <select id="selectByStage" resultMap="GeneTargetMap">
    SELECT * FROM gene_target WHERE stage = #{stage}
  </select>

</mapper>
